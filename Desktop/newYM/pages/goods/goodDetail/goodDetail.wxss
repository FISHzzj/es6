/* pages/goods/goodDetail/goodDetail.wxss */

page {
  background: #f5f5f5;
}

.top {
  position: relative;
  height: 356rpx;
  width: 100%;
  font-size: 28rpx;
  border-bottom: 1px solid #e5e5e5;
  box-sizing: border-box;
}

.top>cover-view {
  width: 100%;
  height: 110rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  color: #333;
  background: rgba(255, 255, 255, 0.705);
  box-sizing: border-box;
  padding: 20rpx 20rpx 20rpx 40rpx;
  z-index: 1111
}

.shopName {
  display: inline-block;
  color: #333;
  width: 460rpx;
  height: 100%;
}

.top>cover-view cover-image {
  float: right;
  width: 44rpx;
  height: 40rpx;
}

.shopImg {
  width: 100%;
  height: 100%;
}

.shopImg image{
  width: 100%;
  height: 100%;
}

.serve{
  height: 48rpx;
  width: 100%;
  padding: 8rpx 24rpx;
  background: white;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}

.serviceItem{
  color: #333;
  font-size: 24rpx;
}

.serviceItem>image{
  width: 26rpx;
  height: 26rpx;
}

.none{
  color: #a0a0a0;
}

.setMeal{
  width: 100%;
  background: white;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.titleBox{
  width: 100%;
  line-height: 72rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  color: #333;
}

.smTitle{
  text-align: center;
  background: #f5f5f5;
}

.goodsLine{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  color: #333;
  font-size: 24rpx;
  border-bottom: 1px solid #f3f3f3;
}

.goodsLine text{
  text-decoration: line-through;
}

.seeImg{
  height: 90rpx;
  width: 100%;
  padding: 10rpx 24rpx 10rpx;
  text-align: center;
  font-size: 28rpx;
  background: white;
  box-sizing: border-box;
}

.seeImg>span{
  display: block;
  width: 20rpx;
  height: 20rpx;
  border-width: 0 1px 1px 0;
  border-color: #999;
  border-style: solid;
  transform: rotate(45deg);
  margin: 0rpx auto;
}

.detail{
  background: white;
  margin-bottom: 20rpx;
}

.itTitle{
  height: 78rpx;
  padding: 0 24rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #f2f2f2;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-top: 20rpx;
  border-top: 1px solid #f2f2f2;
}

.itTitle+view{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  color: #333;
  font-size: 28rpx;
}

.itTitle+view image{
  width: 100%;
}

.rule{
  margin-top: 20rpx;
  background: white;
}

.ruleTitle{
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 24rpx;
  font-weight: bold;
  color: #333;
  font-size: 28rpx;
  border-bottom: 1px solid #f2f2f2;
}

.ruleLine{
  padding: 16rpx 24rpx;

}

.ruleLine title{
  color: #a1a1a1;
  font-size: 24rpx;
}

.ruleLine p{
  display: block;
  color: #333;
  font-size: 24rpx;

}

.commentTitle{
  height: 80rpx;
  margin-top: 30rpx;
  color: #333;
  font-size: 24rpx;
  background: white;
  padding: 0 32rpx 0 24rpx;
}

.commentTitle>span{
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  border-width: 1px 1px 0 0;
  border-color: #939393;
  border-style: solid;
  transform: rotate(45deg);
}

.commentList{
  padding-bottom: 40rpx;
}

.comment{
  width: 100%;
  background: white;
  padding: 20rpx;
  border-top: 1px solid #eaeaea;
}

.commentTop>image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.userInfo{
  flex: 1;
  color: #333;
  font-size: 24rpx;
  padding: 10rpx 34rpx 0 20rpx;
  box-sizing: border-box;
}

.userInfo>view{
  width: 64%;
}


.userInfo>text{
  color: #d1d1d1;
  padding-left: 30rpx;
}

.star>image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}

.commentContent{
  padding: 10rpx 26rpx 0 110rpx;
}

.textBox{
  color: #898989;
  font-size: 28rpx;

}

.imgBox{
  margin-top: 20rpx;

}

.imgBox>image{
  width: 170rpx;
  height: 170rpx;
  margin: 0 10rpx 10rpx 0;
}

.bottom{
  position: fixed;
  bottom: 0;
  height: 130rpx;
  width: 100%;
  background: white;
  box-sizing: border-box;
  box-shadow: 0px 2px 10px #888888;
  padding: 24rpx 22rpx;
  color: #999;
  font-size: 24rpx;
  line-height: 48rpx;
}

.price{
  color: #a32020;

}

.price text{
  font-size: 36rpx;

}

.price+view tx{
  color: #a72a2a;
}

.pay{
  width: 140rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  color: white;
  border-radius: 10rpx;
  background: #b24343;
  margin-top: 10rpx;
}