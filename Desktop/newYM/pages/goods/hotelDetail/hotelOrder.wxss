/* pages/goods/hotelDetail/hotelOrder.wxss */

page {
  height: 100%;
  background: #f5f5f5;
}

.roomInfo {
  padding: 20rpx 30rpx;
  font-size: 24rpx;
  color: #696969;
}

.roomInfo>view {
  width: 70%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  line-height: 36rpx;
}

.roomInfo>.title {
  color: #333;
  font-size: 28rpx;
  line-height: 42rpx;
}

.line{
  background: white;
  height: 90rpx;
  width: 100%;
  border-bottom: 1px solid #f4f4f4;
  color: #333;
  font-size: 28rpx;
  padding: 0 36rpx 0 24rpx;
  box-sizing: border-box;
}

.numBtn{
  width: 52rpx;
  height: 60rpx;
  border: 1px solid #d9d9d9;
  box-sizing: border-box;
  text-align: center;
  line-height: 60rpx;
}

.num{
  font-size: 28rpx;
  color: #666;
  background: #ebebeb;
  height: 60rpx;
  line-height: 60rpx;
  width: 72rpx;
  text-align: center;
}

.line input[type="text"]{
  text-align: right;
}

.inpStyle{
  font-size: 28rpx;
  color: #666;
  text-align: right;
}

.line text{
  color: #a3a3a3;
}

.line span{
  color: #ec7043
}

.submitBtn{
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 10rpx;
  color: white;
  font-size: 28rpx;
  background: #ec7043;
  text-align: center;
  margin: 80rpx auto;
}