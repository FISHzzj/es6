/* pages/location/location.wxss */
page{
  background: #e5e5e5;
  height: 100%;
}

.title{
  color: #959595;
  font-size: 24rpx;
  padding-left: 24rpx;
  line-height: 44rpx;
}

.city{
  background: white;
  height: 64rpx;
  font-size: 24rpx;
  padding-left: 24rpx;
  line-height: 64rpx;
}

.hotCity{
  background: white;
  padding: 30rpx 70rpx;
  overflow: hidden;
}

.hotCity>view{
  width: 156rpx;
  height: 60rpx;
  border: 1px solid #e8e8e8;
  border-radius: 6rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.side{
  position: fixed;
  right: 0;
  background: rgba(0, 0, 0, .5);
  width: 50rpx;
  bottom: 10%;
}

.side>view{
  width: 100%;
  height: 42rpx;
  color: white;
  line-height: 42rpx;
  text-align: center;
  font-size: 26rpx;
}

.letter{
  position: fixed;
  top: calc(50% - 160rpx);
  left: calc(50% - 60rpx);
  width: 120rpx;
  height: 120rpx;
  font-size: 80rpx;
  text-align: center;
  line-height: 120rpx;
  color: #888;
  border-radius: 50%;
  border: 6rpx solid #999
}