/* pages/addGoods/addGoods.wxss */

/* 头部导航 */

page {
  background: #f5f5f5;
  font-size: 28rpx;
  color: #666;
}

.header {
  display: flex;
  height: 84rpx;
  background-color: white;
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 999;
  border-bottom: 1px solid #dedede;
}

.header text {
  width: 33.3%;
  height: 100%;
  color: #8c8c8c;
  line-height: 80rpx;
  font-size: 28rpx;
  text-align: center;
  box-sizing: border-box;
}

.header text.active {
  color: #333;
  font-weight: 700;
  border-bottom: 3px solid #e00d90;
}

/* 主要 区域 */

.main {
  margin-top: 3rem;
  margin-bottom: 120rpx;
  background-color: white;
}

.form .div {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  padding: 30rpx 24rpx;
  box-sizing: border-box;
  height: 120rpx;
}

.form .div .p:first-child {
  width: 35vw;
}

.main input {
  border-radius: 5rpx;
  border: 1rpx solid #999;
  color: #333;
  padding-left: 10rpx;
  font-size: 0.8rem;
  height: 60rpx;
}

.must {
  position: relative;
}

.must::before {
  content: '*';
  position: absolute;
  left: -25rpx;
  color: red;
  /* color: red; */
}

.form .detail {
  min-height: 3.5em;
  height: auto;
}

.detail .p:last-child {
  width: calc(100% - 35vw);
}

textarea {
  width: 100%;
}

.submitBtn {
  position: fixed;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  background: #fa00a4;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 30rpx;
  border-radius: 0;
  z-index: 1111;
}

.picker{
  color: #333;
}
.checkbox {
  font-size: 0.8rem;
}

checkbox {
  transform: scale(0.8);
}

.imgBox{
  width: 420rpx;
  height: 70rpx;
  overflow: hidden;

}

.images{
  position: relative;
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
  margin: 0 10rpx 10rpx 0;
}

.images>span{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  color: red;
  font-weight: bold;
  right: 0;
  top: 0;
}

.images>image{
  height: 100%;
  width: 100%
}

.imgBox>image{
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
  margin: 0 10rpx 10rpx 0;
}

.add{
  background: whitesmoke;
}