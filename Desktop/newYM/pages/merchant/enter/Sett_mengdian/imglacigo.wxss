.content_box{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.nine-img{
  width: 33.333%;

  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
}
.nine_div{
  width: 100%;
  height: 220rpx;
  border: 2rpx solid #f5f5f5;
}
.nine_div image{
  width: 60%;
  height: 60%;
}
.butt_box view{
  margin: 32rpx auto;
  width: 45%;
  height: 80rpx;
  background: #b24344;
  color: #fff;
  font-size: 30rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  text-align: center;
  border-radius: 10rpx;
}
.text_aa{
  width: 100%;
  height: 90rpx;
  border-top:2rpx solid #f5f5f5;
  border-bottom:2rpx solid #f5f5f5; 
  color: #333;
  line-height: 90rpx;
  font-size: 30rpx;
  padding-left: 30rpx;
}
.guanbi{
  width: 40rpx;
  height: 40rpx;
  background: #b24344;
  color: white;
  text-align: center;
  line-height: 38rpx;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  border-radius:50%;
}

.confirm{
  width: 240rpx;
  height: 80rpx;
  color: white;
  margin: 40rpx auto;
  background: #b24344;
  text-align: center;
}