/* pages/merchant/index.wxss */
page{
  background: #f5f5f5;

}

.top{
  background: #343434;
  padding-bottom: 50rpx;
  border-top: 1px solid #343434;
}

.searchCase{
  width: 90%;
  height: 72rpx;
  margin: 30rpx auto 40rpx;
  background: white;
  border-radius: 16rpx;
  padding: 0 20rpx 0 30rpx;
  box-sizing: border-box;
}

.searchCase>input{
  width: 70%;
  font-size: 30rpx;
}

.inpStyle{
  font-size: 28rpx;
  line-height: 72rpx;
}

.searchCase>image{
  width: 60rpx;
  height: 60rpx;
}

.topBnt{
  width: 50%;
  text-align: center;
  color: white;
  font-size: 28rpx;
  
}

.topBnt>image{
  width: 40rpx;
  padding-right: 6rpx;
}

.info{
  text-align: center;
  font-size: 24rpx;
  line-height: 44rpx;
  margin-top: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1px solid #ebebeb;
}

.li{
  width: 33.3%;
  box-sizing: border-box;
  padding: 28rpx;
  text-align: center;
  font-size: 24rpx;
  color: #333;
}

.li>image{
  width: 60rpx;
  height: 60rpx;
  padding: 10rpx;
  background: #535353;
  border-radius: 50%;
  box-sizing: border-box;
}

.memberBtm{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  box-shadow: 0 0 4px rgba(0,0,0,0.1);
  background: white;
  color: #999;
  font-size: 24rpx;
  padding: 8rpx 0 0;
  box-sizing: border-box;
}

.memberBtm>navigator{
  width: 25%;
  text-align: center;

}

.memberBtm>navigator image{
  width: 44rpx;
  height: 44rpx;
}

.codeBox{
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
  z-index: 111;
  overflow: scroll;
}

.codeBox>image{
  position: absolute;
  /* top: 0; */
  width: 100%;

}

.closeBtn{
  position: fixed;
  right: 40rpx;
  bottom: 80rpx;
  width: 160rpx;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 80rpx;
  background: rgba(255,255,255,0.5);
  border: 1px solid #a09d9d;
  text-align: center;
}