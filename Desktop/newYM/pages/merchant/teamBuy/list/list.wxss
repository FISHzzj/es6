/* pages/list/list.wxss */
page{
  background: #f5f5f5;
}
.text_box{
  width: 100%;
  height: 84rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  box-sizing: border-box;
}
.text_box view{
  width: 25%;
  height: 100%;
  text-align: center;
  line-height: 84rpx;
  color: #8c8c8c;
  font-weight: 400;
  font-size: 28rpx;
}

.act{
  color: #000 !important;
  font-weight: bold !important;
  border-bottom: 6rpx solid #e00d90;
  box-sizing: border-box;
}

.black{
  color: #333;
}

/* 内容------------------------------------- */
.content_box{
  width: 100%;
  background: #fff;
}
.content_box .content_div{
  padding: 12rpx 26rpx 22rpx 0rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  height: 100%;
  border-bottom: 2rpx solid #f5f5f5;
}
/*  */
.content_left{
  width: 480rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  line-height: 40rpx;
  color: #818181;
}
.content_left>view{
  display: inline-block;
  margin-left: 26rpx;
}
.content_state{
  width: 100%;
  padding-right: 26px;
  box-sizing: border-box;
  margin-left: 0 !important;
}
.content_state>view,.conten_nume>view{
  display: inline-block;
  margin-left: 26rpx;
}
.conten_nume{
  width: 100%;
  display: flex;
  margin-left: 0 !important;
}
/* content_right右边----------------- */
.content_right{
  width: 176rpx;
  display: flex;
  justify-content: space-between;
}

.newBtn{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  line-height: 80rpx;
  background: #333;
  color: white;
  font-size: 32rpx;
}

.newBtn>image{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 1px solid #e0e0e0;
  margin-right: 10rpx;
}