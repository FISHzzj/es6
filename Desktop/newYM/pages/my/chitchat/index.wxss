.container{
  position: relative;
  font-size: 30rpx;
  padding: 20rpx 10rpx;
  height: 100%;
}
.chat_left{
  /* position: absolute;
  left: 20rpx; */
  flex-wrap: wrap;
  width: 100%;
  margin-bottom: 40rpx;

}
.chat_left>image{
  border-radius: 50%;
  /* width: 80rpx;
  height: 80rpx; */

}
.chat_neirong{
  width: 500rpx;
}
.chat_name{
  margin-bottom: 10rpx;
}

.chat_right{
  /* position: absolute;
  right: 20rpx; */
  flex-wrap: wrap;
  justify-content: flex-end;
  width: 100%;
  margin-bottom: 40rpx;
}
.chat_right>image{
  border-radius: 50%;


}
.chat_name_right{
  text-align: right;
  margin-right: 20rpx;
  margin-bottom: 10rpx;

}
.chat_bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: white;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  left: 0;

}
.chat_input{
  width: 600rpx;
  border: 1rpx solid #eee;
  margin: 0 20rpx;
  padding-left: 10rpx;
}
.fasong{
  border: 1px solid #eee;
  background: #999;
  padding: 10rpx 15rpx;
  box-sizing: border-box;
  color: #fff;

}

.chat_time{
  width: 100%;
  margin: 20rpx 0;
  text-align: center;
}




