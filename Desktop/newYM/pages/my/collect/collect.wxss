/* pages/my/collect/collect.wxss */

page {
  background: #f5f5f5;
}

.top {
  background: white;
  height: 80rpx;
  width: 100%;
  color: #7e7e7e;
  font-size: 32rpx;
  text-align: center;
  border-bottom: 1rpx solid #e4e4e4;
}

.top>view {
  width: 50%;
  height: 100%;
  line-height: 80rpx;
}

.act {
  color: #333;
  border-bottom: 4rpx solid #e532a0;
  font-weight: bold;
}

.listItem {
  width: 100%;
  background: white;
  border-bottom: 1px solid #e4e4e4;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: #959595;
}

.listItem>image {
  width: 174rpx;
  height: 144rpx;
  background: red;
}

.infoBox {
  width: 60%;
  padding-left: 24rpx;
}

.infoBox>view {
  width: 100%;
}

.title {
  color: #333;
  font-size: 28rpx;
  line-height: 44rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.title+view {
  min-height: 52rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding: 6rpx 0 6rpx;
}

.infoBox span{
  display: inline-block;
  color: #e532a0;
  width: 120rpx;
  margin-right: 40rpx;
}

.sp{
  display: inline-block;
}

.shopList{
  background: white;
}

.shopItem{
  padding: 12rpx 24rpx;
  border-bottom: 4rpx solid #ebebeb;
}

.shopImg>image{
  height: 144rpx;
  width: 174rpx;
}

.shopInfo{
  padding-left: 24rpx;
  color: #909090;
  font-size: 24rpx;
  line-height: 44rpx;
  flex-grow: 1;
}

.shopInfo>view{
  height: 44rpx;
}

.shopName{
  color: #000;
  font-size: 28rpx;
}

.shopInfo image{
  width: 24rpx;
  height: 24rpx;
}