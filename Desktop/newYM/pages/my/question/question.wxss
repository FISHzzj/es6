/* pages/my/question/question.wxss */
page{
    background: #f5f5f5;
  }
  
  .line{
    border-bottom: 1px solid #e4e4e4;
    font-size: 28rpx;
    color: #333;
    min-height: 80rpx;
    padding-left: 30rpx;
    box-sizing: border-box;
    background: white;
  }
  
  .content{
    width: 75%;
    padding: 20rpx 0;
    padding-right: 10rpx;
    box-sizing: border-box;
    border-right: 1px solid #e4e4e4;
  }
  
  .content+view{
    flex: 1
  }
  
  .line span{
    text-align: center;
    line-height: 60rpx;
    width: 100rpx;
    height: 60rpx;
    border: 1px solid #ccc;
    border-radius: 8rpx;
  }
  
  .mask{
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .1)
  }
  
  .popup{
    position: relative;
    margin: 26% auto;
    width: 440rpx;
    height: 560rpx;
    background: white;
    border-radius: 10rpx;
    padding: 66rpx 50rpx;
  }
  
  .popup>image{
    position: absolute;
    width: 50rpx;
    height: 50rpx;
    top: 10rpx;
    right: 16rpx;
  }
  
  .popup>view{
    height: 100%;
    font-size: 30rpx;
    color: #333;
    text-indent: 60rpx;
    overflow: scroll;
  }