/* pages/my/redPacket/redPacket.wxss */
page{
  background: #f5f5f5;
}

.text{
  font-size: 32rpx;
  text-align: center;
  font-weight: bold;
  line-height: 50rpx;
}

.title{
  border-top: 1px solid #e4e4e4;
  height: 80rpx;
  border-bottom: 1px solid #e4e4e4;
  background: white;
}

.title>view{
  width: 25%;
  text-align: center;
  color: #333;
  font-size: 28rpx;
  line-height: 80rpx;
}

.dataLine{
  border-bottom: 1px solid #e4e4e4;
  background: white;
}

.dataLine>view{
  width: 25%;
  font-size: 24rpx;
  color: #333;
  padding-top: 20rpx;
  min-height: 110rpx;
  text-align: center
}

.loading{
  color: #333;
  height: 120rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  text-align: center;
}

.loading>image{
  width: 30rpx;
  height: 30rpx;
}