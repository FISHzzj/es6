
page{
  background: #f5f5f5;
  height: 100%;
  border-top: 1px solid rgba(0, 0, 0, 0)
}

.red{
  color: #ff5555;
}

.shopBox{
  background: white;
  padding: 0 24rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}

.title{
  color: #333;
  font-size: 28rpx;
  line-height: 72rpx;
  border-bottom: 1px solid #ebebeb;
}

.title>image{
  width: 30rpx;
}

.goods{
  width: 100%;
  padding: 16rpx 0rpx;
  border-bottom: 1px solid #ebebeb;
  box-sizing: border-box;
}

.goods>image{
  width: 160rpx;
  height: 160rpx;
  margin-right: 24rpx;

}

.goodsInfo{
  flex: 1;
  color: #333;
  font-size: 28rpx;
  padding: 20rpx 0;
}

.goodsTitle{
  width: 70%;
  /* height: 90rpx; */
  line-height: 46rpx;
}

.goodsPrice{
  flex: 1;
  text-align: right;
}

.goodsPrice+view{
  text-align: right;
  color: #999;
  width: 100%;
}

.subtotal{
  padding: 30rpx 0rpx;
  font-size: 28rpx;
  text-align: right
}

.btm{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  box-shadow: 0 0 4px rgba(0,0,0,0.1);
}

.totalPrice{
  width: 46%;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
  background: white;
}

.confirm{
  flex: 1;
  color: white;
  background: #ff5555;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  border-radius: 0;
}