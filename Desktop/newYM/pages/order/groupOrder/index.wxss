/* pages/order/groupOrder/index.wxss */
page{
  background: #f5f5f5;
}

.line{
  height: 80rpx;
  background: white;
  font-size: 28rpx;
  color: #333;
  padding: 0 30rpx 0 24rpx;
  border-top: 2px solid #e5e5e5
}

.pink{
  color: #e532a0;
}

.info{
  height: 80rpx;
  color: #8a8a8a;
  font-size: 24rpx;
  padding-left: 24rpx;
  border-top: 2px solid #ececec;
  background: white;
}

.numCtrl{
  width: 172rpx;
  height: 50rpx;
  border: 1px solid #d9d9d9;
  color: #333;
  text-align: center;
}

.numCtrl>span{
  display: inline-block;
  width: 50rpx;
  height: 100%;
  background: #f7f7f7;
  font-size: 32rpx;
  line-height: 50rpx;
}

.confirm{
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  background: #e532a0;
  color: white;
  margin: 40rpx auto;
  font-size: 28rpx;
}