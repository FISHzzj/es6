page {
  /* background: #f5f5f5; */
}

.goods-info {
  width: auto;
}

.order .btn {
  margin: 10rpx 0 10rpx 20rpx;
  padding: 10rpx 10rpx;
  height: 50rpx;
  line-height: 30rpx;
}

.order .empty {
  padding: 260rpx 150rpx;
  font-size: 34rpx;
}

.order .empty .btn {
  padding: 20rpx 20rpx;
  height: 80rpx;
  line-height: 40rpx;
  font-size: 34rpx;
}

.order .light {
  height: 260rpx;
  width: 240rpx;
  margin-bottom: 55rpx;
}

.order .text-cancel {
  padding: 10rpx;
}

.order .order-num {
  -webkit-flex: 1;
  flex: 1;
}

.orderBox{
  padding: 40rpx 32rpx 60rpx;
}

.orderBox>image{
  width: 112rpx;
  height: 112rpx;
  background: #D8D8D8
}

.orderDel{
  position: absolute;
  background: rgb(230, 67, 63);
  text-align: center;
  height: 150rpx;
  width: 100rpx;
  color: white;
  font-size: 30rpx;
  line-height: 150rpx;
  top: 100rpx;
  right: -100rpx;
}

.order-num::after{
  content: " ";
  display: inline-block;
  width: 0;
  height: 0;
  border-top: 10rpx solid transparent;
  border-bottom: 10rpx solid transparent;
  border-left: 10rpx solid #848484;
  margin-left: 10rpx;
}

.statuscss{
  color: #930000;
}


.orderInfo{
  box-sizing: border-box;
  padding: 0rpx 24rpx;
}

.orderTitle{
  font-size: 32rpx;
  font-weight: bold;
  line-height: 44rpx;
}

.orderInfo text{
  display: block;
  color: #878787;
  font-size: 24rpx;
  line-height: 44rpx;
}

.orderInfo>image{
  width: 210rpx;
  height: 150rpx;
}

.orderOp{
  color: #9b9b9b;
  font-size: 28rpx;
  height: 100rpx;
  line-height: 60rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.orderOp>span{
  float: right;
  height: 60rpx;
  width: 150rpx;
  border: 1px solid #595959;
  border-radius: 6rpx;
  text-align: center;
  color: #333;
  font-size: 24rpx;
}

.fui-tab-scroll .item {
  padding: 0 30rpx;
}

.order .fui-list-inner .subtitle {
  line-height: 44rpx;
}

.orderscroll {
  display: flex;
  flex-direction: row;
  background-color: white;
}

.orderscroll:after {
  content: "";
  height: 2rpx;
  width: 100%;
  background: #efefef;
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 2;
}

.orderscroll .item {
  height: 80rpx;
  width: 25%;
  text-align: center;
  line-height: 80rpx;
  color: #8c8c8c;
  padding: 0 30rpx;
  display: inline-block;
  box-sizing: border-box;
  font-size: 28rpx;
}

.orderscroll .item.active {
  color: #000;
  position: relative;
  z-index: 10;
  font-weight: 500;
}

.orderscroll .item.active:before {
  content: "";
  height: 6rpx;
  width: 100%;
  background: #e00d90;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 1;
}
