/* pages/Orderdetails/Orderdetails.wxss */

page {
  background: #f5f5f5;
}

.title {
  text-align: center;
  font-size: 34rpx;
  height: 92rpx;
  padding: 50rpx 22rpx 0;
  background: white;
  margin-bottom: 16rpx;
}

.back {
  width: 26rpx;
  height: 26rpx;
  border-width: 2px 0 0 2px;
  border-color: black;
  border-style: solid;
  transform: rotate(-45deg);
}

.line{
  background: white;
  margin-bottom: 8rpx;
  padding: 32rpx;
  font-size: 30rpx;
}

.switchLine {
  height: 112rpx;
  background: white;
  padding: 0 32rpx;
  margin-bottom: 8rpx;
  font-size: 30rpx;
}

.switchLine>image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

switch+label{
  position: relative;
  width: 114rpx;
  height: 54rpx;
  border-radius: 27rpx;
  background: #EBEBEB;

}

switch+label::after{
  position: absolute;
  content: "";
  width: 46rpx;
  height: 46rpx;
  background: white;
  top: 4rpx;
  left: 4rpx;
  border-radius: 50%;
}

.checked{
  background: #e532a0;
}

.checked::after{
  left: 64rpx;
}

.top {
  height: 216rpx;
  background: white;
  padding: 20rpx 28rpx;
  font-size: 28rpx;
}

.top>textarea {
  height: 90rpx;
  font-size: 28rpx;
  padding: 10rpx;
  color: #999;
}

.receiveInfo {
  display: inline-flex;
  line-height: 54rpx;
}

.receiveInfo>input {
  width: 180rpx;
  margin: 0 20rpx;
  color: #999;
}

.top+view {
  margin: 36rpx 28rpx;
  color: #e532a0;
  font-size: 28rpx;
  font-weight: bold;
}

.goodsBox {
  height: 496rpx;
  margin: 10rpx 0 30rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.goods {
  width: 100%;
  margin-bottom: 12rpx;
  background: white;
  padding: 16rpx 10rpx;
  font-size: 28rpx;
}

.goodsInfo {
  flex: 1;
  margin-left: 32rpx;
  padding-right: 10%;
}

.goodsTitle {
  width: 504rpx;
  margin-bottom: 26rpx;
}

.goodsTitle+view {
  color: #888;
  font-size: 24rpx;
  line-height: 32rpx;
}

.goodsInfo span {
  float: right;
}

.btmBox {
  position: fixed;
  width: 100%;
  bottom: 0;
}

.payBox {
  height: 104rpx;
}

.payBox>view {
  flex: 1;
  background: white;
  border: 2rpx solid #eee;
  box-sizing: border-box;
  padding: 30rpx;
  font-size: 28rpx;
  color: #e532a0;
}

.payBox image {
  width: 52rpx;
  height: 52rpx;
  margin-right: 8rpx;
}

.pay {
  width: 200rpx;
  height: 100%;
  color: white;
  text-align: center;
  line-height: 104rpx;
  background: #e532a0;
  border: none;
  border-radius: 0;
  font-size: 32rpx;
}

.content_div {
  width: 100%;
  height: 80rpx;
  /* line-height: 80rpx; */
  padding: 0 24rpx;
  font-size: 26rpx;
  border-bottom: 2rpx solid #ececec;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
}

.colob {
  color: #e532a0;
}
