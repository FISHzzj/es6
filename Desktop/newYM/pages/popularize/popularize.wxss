/* pages/popularize/popularize.wxss */
page{
  background: #f5f5f5;
}

.tabBox{
  display: flex;
  height: 90rpx;
  width: 100%;
  background: white;
  text-align: center;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #333;
}

.tabBox>view{
  width: 33.3%;

}

.title{
  display: flex;
  height: 80rpx;
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #ebebeb
}

.title>view{
  width: 25%;
}

.tableLine{
  display: flex;
  height: 80rpx;
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  overflow: hidden
}

.tableLine>text{
  display: inline-block;
  width: 25%;
  border-bottom: 1rpx solid #ebebeb;
  border-left: 1rpx solid #ebebeb;
}

.table-item{
  display: flex;
  height: 80rpx;
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  overflow: hidden
}

.table-item>span{
  display: inline-block;
  width: 25%;
  border-bottom: 1rpx solid #ebebeb;
  border-left: 1rpx solid #ebebeb;
}

.table-item text{
  display: block;
  margin:  15rpx auto;
  height: 50rpx;
  width: 70%;
  line-height: 50rpx;
  border-radius: 6rpx;
  border: 1rpx #999 solid;
}