/* pages/search/hotel.wxss */

page {
  height: 100%;
  background: #f5f5f5;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}

.top {
  position: fixed;
  top: 0;
  z-index: 1111;
  width: 100%;
  height: 84rpx;
  background: white;
  border-bottom: 1px solid #e2e2e2;
  border-top: 1px solid rgba(0, 0, 0, 0);
}

.inputBox {
  height: 64rpx;
  width: 75%;
  background: #f5f5f5;
  border-radius: 34rpx;
  margin: 10rpx 0 0 34rpx;
  padding: 0 30rpx 0 30rpx;
  box-sizing: border-box;
}

.inputBox>image {
  width: 46rpx;
  height: 46rpx;
}

.inputBox>input {
  font-size: 28rpx;
  color: #333;
  font-weight: normal;
  padding-left: 10rpx;
  width: 80%;
}

.pla {
  font-size: 28rpx;
  padding-left: 10rpx;
}

.searchBtn {
  display: inline-block;
  margin: 20rpx 0 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

.filtrateBox {
  position: fixed;
  top: 88rpx;
  height: 70rpx;
  width: 100%;
  background: white;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  line-height: 70rpx;
  border-bottom: 1px solid #ebebeb;
}

.filtrateBox>view {
  width: 33.3%;
}

.triangle {
  border-bottom: 12rpx solid #333;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  margin-left: 4rpx;
}

.act {
  color: #9e9e9e;
}

.up {
  border-bottom: 0;
  border-top: 12rpx solid #9e9e9e;
}

.DSBox {
  display: none;
  position: fixed;
  top: calc(90rpx + 70rpx);
  width: 100%;
  height: 75%;
  background: white;
  padding-bottom: 50rpx;
}

.showAnimation0 {
  opacity: 0;
  display: flex;
  animation: show 500ms 1 normal forwards;
}

@-webkit-keyframes show {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}

.district {
  width: 30%;
  height: 100%;
  color: #333;
  font-size: 28rpx;
  overflow: scroll;
  border-right: 1px solid #f5f5f5;
}

.districtItem {
  width: 100%;
  box-sizing: border-box;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 40rpx;
}

.districtItem>span {
  height: 100%;
  display: inline-block;
  width: 80rpx;
  border-bottom: 2px solid #a11a1a;
  text-align: center;
  box-sizing: border-box;
}

.streetBox {
  height: 100%;
  overflow: scroll;
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.street {
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 30rpx;
}

.sortBox {
  display: none;
  position: fixed;
  top: 160rpx;
  width: 100%;
  background: white;
}

.showAnimation1 {
  opacity: 0;
  display: block;
  animation: show 500ms 1 normal forwards;
}

.sortBox>view {
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 40rpx;
  font-size: 28rpx;
  color: #333;
}

.hotelList {
  background: white;
  /* border-bottom: 1px solid transparent; */
}

.hotelItem {
  height: 244rpx;
  width: 100%;
}

.hotelItem>image {
  width: 30%;
  height: 100%;
  padding: 10rpx 0 10rpx 20rpx;
  box-sizing: border-box;
}

.infoBox {
  flex: 1;
  height: 100%;
  box-sizing: border-box;
  padding: 10rpx 16rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #676767;
  border-bottom: 1px solid #fafafa;
}

.title {
  width: 90%;
  color: #333;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.pingfen {
  margin: 6rpx 0 10rpx;
}

.grade {
  display: inline-block;
  padding: 0rpx 6rpx;
  background: #ea662d;
  color: white;
  margin-right: 10rpx;
  line-height: 36rpx;
}

.grade+text {
  color: #d75d28;
  padding-right: 10rpx;
}

.price {
  color: #e95d2b;
}

.price text {
  font-size: 32rpx;
  padding: 0 8rpx 0 6rpx;
}

.price+view {
  text-align: center;
  margin: 0 8rpx;
  padding: 0 8rpx;
  background: #fbf7f1;
  color: #c4a573;
}

.intro {
  width: 90%;
  color: #ac8763;
  padding-top: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.levelBox {
  position: fixed;
  width: 100%;
  top: 160rpx;
  background: white;
}

.starBox{
  padding: 0 40rpx;
  font-size: 28rpx;
  line-height: 70rpx;
  color: #333;
}

.star>view{
  width: 24%;
  background: #f4f5f7;
  text-align: center;
  color: #6b6c6c;
  border-radius: 10rpx;
}

.starBox+view{
  color: #333;
  font-size: 24rpx;
  padding: 8rpx 40rpx;
  line-height: 84rpx;
  font-weight: bold;
}

.starBox+view text{
  color: #e95520;
  font-weight: normal;
}

.priceBox{
  padding: 0 12rpx 40rpx;
  overflow: hidden;
}

.priceAct{
  background: #fcf0eb !important;
  color: #ea5e2b !important;
}

.priceBox>view{
  width: 24.1%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 24rpx;
  text-align: center;
  color: #333;
  background: #f4f5f7;
  border-radius: 10rpx;
  margin: 10rpx 6rpx 0 0;
}

.reset{
  height: 96rpx;
  width: 35%;
  border-top: 1px solid #f8f9f9;
  background: white;
  line-height: 96rpx;
  text-align: center;
  color: #333;
  font-size: 28rpx;
}

.fulfill{
  background: #ec7043;
  flex:1;
  color: white;
  text-align: center;
  line-height: 96rpx;
  font-size: 28rpx;
}

.null {
  margin: 120rpx auto 0;
  text-align: center;
  font-size: 28rpx;
  color: #ccc;
}

.null>image {
  width: 240rpx;
  height: 250rpx;
  margin: 30rpx 0 40rpx;
}
