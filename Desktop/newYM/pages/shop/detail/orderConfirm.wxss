/* pages/shop/detail/orderConfirm.wxss */
page{
  background: #f5f5f5;
}

.locInfo{
  background: white;
  padding: 28rpx 38rpx;
  border-top: 1px solid #F6F6F6;
}

.locInfo>image{
  height: 46rpx;
}

.locInfo>view>view{
  width:100%;
}

.locInfo+image{
  display: block;
  width: 100%;
  height: 20rpx;
}

.tabBox{
  background: white;
  margin-top: 24rpx;
  padding: 24rpx 0;
  border-bottom: 1px solid #F1F1F1;
}

.tabBox>view{
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 46rpx;
  background: #B8B8B8;
  color: white;
  border-radius: 24rpx;
  font-size: 26rpx;
}

.active{
  background: #E40B7B !important;
}

.inputBox{
  background: white;
  padding: 68rpx 70rpx;
  font-size: 50rpx;
}

.inputBox>input{
  border-bottom: 1px solid #818181;
  outline: none;
  margin-left: 20rpx;
  height: 80rpx;
  padding-left: 20rpx;
}

.rule{
  background: white;
  border-top: 1px solid #F1F1F1;
  font-size: 28rpx;
  padding: 0 32rpx;
  line-height: 72rpx;
}

.rule>image{
  width: 28rpx;
  height: 28rpx;
  margin-left: 50rpx;
}

.pay{
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  background: #E40B7B;
  margin: 80rpx auto 0;
  border-radius: 10rpx;
  color: white;
  font-size: 30rpx;
  font-weight: bold;
}

.content_box .content_div{
  width: 100%;
  height: 80rpx;
  /* line-height: 80rpx; */
  padding: 0 24rpx;
  font-size: 26rpx;
  border-bottom: 2rpx solid #ececec;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
}
.butt_box{
  padding: 0 40rpx;
  margin-top: 44rpx;
  box-sizing: border-box;
}

/* ---------------- */
.number_box{
  
  width: 172rpx;
  /* height: 100%; */
  display: flex;
  align-items: center;
  border: 2rpx solid #000;
}
.number_box>view{
  width: 50rpx;
  height: 50rpx;
  border-radius: 0;
  line-height: 50rpx;
  text-align: center;
  background: #f7f7f7;
}
.number_box input{
  width: 72rpx;
  text-align: center;
}
.butt_box>button{
  width: 100%;
  line-height: 76rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  background: #e532a0;
  color: #fff;
  margin-bottom: 40rpx;
}
.coloa{
  color: #8a8a8a;
  text-align: right;
}
.colob{
  color: #e532a0;
  text-align: right;
}

.wx-switch-input{
width:82rpx !important;
height:40rpx !important;
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
width:80rpx !important;
height: 36rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
width: 40rpx !important;
height: 36rpx !important;
}