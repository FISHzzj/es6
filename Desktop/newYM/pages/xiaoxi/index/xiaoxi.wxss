/* pages/invitation/invitation.wxss */
page{
  background: #f5f5f5;
}

.tabBtn{
  width: 50%;
  height: 110rpx;
  background: white;
  box-sizing: border-box;
  font-size: 32rpx;
  padding: 44rpx 0 0;
  text-align: center;
  border-bottom: 1px solid #e4e4e4;
}

.tabBtn>view{
  line-height: 48rpx;
}

.active{
  border-bottom: 4rpx solid #e532a0;
  font-weight: bold;
  color: #070707;
}

.listItem{
  position: relative;
  background: white;
  height: 140rpx;
  border-bottom: 1px solid #ebebeb;
  padding: 0 8% 0 40rpx;
  font-size: 28rpx;
  color: #868686
}

.listItem>image{
  width: 36rpx;
  height: 30rpx;
}

.listItem>view{
  padding: 0 10rpx;
  color: #333333;
  font-weight: bold;
}

.listItem>span{
  position: absolute;
  right: 8%;
  color: #333;

}